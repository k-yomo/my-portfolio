<h1>Angular Portfolio items</h1>

<%= link_to "Create New Item",new_portfolio_path if logged_in?(:site_admin) %><br>

<% @angular_portfolio_items.each do |item| %>

    <br>
    <p><%= link_to item.title,portfolio_show_path(item.id) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
    <%= link_to "Edit",edit_portfolio_path(item.id) if logged_in?(:site_admin) %>
    <%= link_to 'Delete', portfolios_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %>
<% end %>
