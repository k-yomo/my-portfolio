<h1>Portfolio items</h1>

  <%= link_to "Create New Item",new_portfolio_path %><br>

<% @portfolio_items.each do |item| %>

<br>
    <p><%= link_to item.title,portfolio_path(item.id) %></p>
    <p><%= item.subtitle %></p>
    <p><%= item.body %></p>
    <%= image_tag item.thumb_image unless item.thumb_image.nil? %>
    <%= link_to "Edit",edit_portfolio_path(item.id) %>
    <%= link_to 'Delete', portfolios_path(item.id), method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
