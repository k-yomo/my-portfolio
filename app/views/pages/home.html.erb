<!-- Contact-->
<section class="module">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="module-title text-center">
          <h2 id="2">Contact</h2>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 m-b-50" style="padding: 0">
        <div class="maps-container map-widget">
          <div id="map" class="map"></div>
        </div>
      </div>

      <div class="col-md-4">
        <div class="special-heading">
          <h3 id="3">Feel free to conact me</h3>
        </div>
        <p></p>
        <table class="icon-list f-s-b">
          <tr>
            <td class="center"><%= fa_icon "paper-plane" %></td> <td><span><%= mail_to "Kanji.yy@gmail.com" %></span></td>
          </tr>
          <tr>
            <td class="center"><%= fa_icon "linkedin" %></td> <td><span><%= link_to 'linkedin', 'http://linkedin.com/in/kanji-yomoda' %></span></td>
          </tr>
          <tr>
            <td class="center"><%= fa_icon "facebook" %></td> <td><span><%= link_to 'facebook', 'https://www.facebook.com/kanji.yomoda' %></span></td>
          </tr>
          <tr>
            <td class="center"><%= fa_icon "github" %></td> <td><span><%= link_to 'github', 'https://github.com/yomoda07' %></span></td>
          </tr>
        </table>
      </div>

      <div class="col-md-8">
        <div id="spinner" class="row col-md-12 text-center spinner" style="display: none">
          <i class="fa fa-spinner fa-spin fa-2x"></i>Sending message...
        </div>
        <%= form_for @inquiry, html: {url: inquiries_path, remote: true, class: "m-b-60", id: "contact-form"} do |f| %>
            <div class="row">

              <div class="col-md-4">
                <div class="form-group">
                  <%= f.text_field :name, placeholder: "Name", class: "form-control" %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= f.text_field :email, placeholder: "E-mail", class: "form-control" %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-4">
                <div class="form-group">
                  <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
                  <p class="help-block text-danger"></p>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <%= f.text_area :message, placeholder: "Message", class: "form-control", rows: "12" %>
                </div>
              </div>
              <div class="col-md-12 box-right-wrap">
                <div class="box-right">
                  <%= f.submit 'Send Request', class: "btn btn-round btn-brand" %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>





<!-- Contact end-->


