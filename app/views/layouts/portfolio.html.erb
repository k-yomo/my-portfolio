<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= @page_title %></title>
    <%= csrf_meta_tags %>

    <meta name="keywords" content="<%= @seo_keywords%>" />

    <%= favicon_link_tag 'favicons/favicon.ico' %>

    <%= stylesheet_link_tag    'portfolios', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div id="background"><%= image_tag "https://s3.ca-central-1.amazonaws.com/kanji-portfolio-bucket/uploads/background-image/portfolio-background.jpg", height:"auto", width:"100%" %></div>
    <%= render "shared/application_nav" %>
    <%= render 'shared/portfolio_masthead'%>

    <%= yield %>

    <%= render 'shared/application_footer' %>

    <%= alerts %>

  </body>
</html>
